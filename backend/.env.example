# Storage configuration
STORAGE_ROOT=./storage

# Redis configuration
REDIS_URL=redis://localhost:6379

# Worker configuration
WORKER_CONCURRENCY=2
RQ_QUEUE_NAME=saree_pipeline

# Retry configuration
MAX_RETRIES=3

# Validation thresholds (per docs/VALIDATION.md)
SSIM_THRESHOLD=0.80
DELTA_E_THRESHOLD=6.0
PATTERN_MATCH_THRESHOLD=0.40

# AI Adapter configuration
# "mock" for local deterministic transforms, "gemini" for Gemini API
AI_ADAPTER_TYPE=gemini

# Gemini API Key (for image generation)
# Get your key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Model options: "gemini-2.5-flash-image" (fast) or "gemini-3-pro-image-preview" (high quality)
GEMINI_MODEL=gemini-2.5-flash-image

# Assets directory (contains model poses and layout references)
ASSETS_ROOT=./assets
